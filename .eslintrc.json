{
  "env": {
    "browser": true,
    "webextensions": true,
    "es6": true
  },
  "extends": [],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["jsdoc", "react"],
  "rules": {
    "jsdoc/require-returns-description": 0,
    "jsdoc/require-param-description": 0,
    "max-len": ["error", 100],
    "newline-after-var": [2, "always"],
    "require-jsdoc": 0,
    "no-fallthrough": 0,
    "object-curly-spacing": [2, "always"]
  },
  "settings": {
    "jsdoc": {
      "tagNamePreference": {
        "returns": "return"
      }
    },
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "detect",
      "flowVersion": "0.53"
    },
    "propWrapperFunctions": [
      "forbidExtraProps",
      { "property": "freeze", "object": "Object" },
      { "property": "myFavoriteWrapper" }
    ],
    "linkComponents": ["Hyperlink", { "name": "Link", "linkAttribute": "to" }]
  }
}
